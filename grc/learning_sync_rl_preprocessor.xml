<?xml version="1.0"?>
<block>
  <name>sync rl preprocessor</name>
  <key>learning_sync_rl_preprocessor</key>
  <category>[learning]</category>
  <import>import learning</import>
  <make>learning.sync_rl_preprocessor($frame_size, $hidden_units, $batch_size, $val, $learning_rate)</make>
  <callback>set_added_value($val)</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Frame size</name>
    <key>frame_size</key>
    <value>100</value>
    <type>int</type>
  </param>
  <param>
    <name>Number of hidden units</name>
    <key>hidden_units</key>
    <value>100</value>
    <type>int</type>
  </param>
  <param>
    <name>Batch size</name>
    <key>batch_size</key>
    <value>5</value>
    <type>int</type>
  </param>
  <param>
    <name>Added value</name>
    <key>val</key>
    <value>0</value>
    <type>float</type>
  </param>
  <param>
    <name>Learning rate</name>
    <key>learning_rate</key>
    <value>1e-4</value>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <sink>
    <name>error</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
