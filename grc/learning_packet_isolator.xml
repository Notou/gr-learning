<?xml version="1.0"?>
<block>
  <name>Packet isolator</name>
  <key>learning_packet_isolator</key>
  <category>[learning]</category>
  <import>import learning</import>
  <make>learning.packet_isolator($pack_len, $pay_len, $lookup_len)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Packet length</name>
    <key>pack_len</key>
    <value>100</value>
    <type>int</type>
  </param>
  <param>
    <name>payload length</name>
    <key>pay_len</key>
    <value>100</value>
    <type>int</type>
  </param>
  <param>
    <name>lookup window</name>
    <key>lookup_len</key>
    <value>30</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
